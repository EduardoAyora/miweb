doctype html
html(lang='es')
  include common/head.pug
  +head("Eduardo Ayora Web")
  body
    header
      include common/navbar.pug
      +navbar()
    section.hero
      .container.text-center
        h1 Desarrollador web
        p.principal-text Sus ideas las pongo en código
    section.medium
      .container.text-center
        p.principal-text Tecnologías con las que desarrollo.
    section.container.skills
      .row.justify-content-center
        .col-12.col-lg-9
          .card-group
            .card
              .img-card
                img(src="/images/frontend.svg" alt="imagen frontend").card-img-top
              .card-body.text-center
                h5.card-title Frontend
                .container
                  .row
                    .col-sm-12.col-xl-6
                      ul.list-group.list-group-flush
                        li.list-group-item 
                          span.font-weight-bold Lenguajes
                        li.list-group-item Html
                        li.list-group-item Css
                        li.list-group-item Javascript
                    .col-sm-12.col-xl-6
                      ul.list-group.list-group-flush
                        li.list-group-item 
                          span.font-weight-bold Librerías, etc.
                        li.list-group-item React
                        li.list-group-item Bootstrap
            .card
              .img-card
                img(src="/images/node.svg" alt="imagen backend").card-img-top
              .card-body.text-center
                h5.card-title Backend
                .container
                  .row
                    .col-sm-12.col-xl-6
                      ul.list-group.list-group-flush
                        li.list-group-item 
                          span.font-weight-bold Lenguajes
                        li.list-group-item Javascript-Node
                        li.list-group-item Php
                    .col-sm-12.col-xl-6
                      ul.list-group.list-group-flush
                        li.list-group-item 
                          span.font-weight-bold Frameworks
                        li.list-group-item Express
    section(id="portafolio").container
      .row.justify-content-center
        .col-12.col-lg-9
          .text-center
            .projects-header
              h2 Portafolio de proyectos
      .projects.text-center
        each post in posts
          .row.justify-content-center
            .col-12.col-lg-9
              .blog
                .view-post
                  .top-post
                  .proyect-header
                    h1= post.title
                  .view-post-body
                    | !{post.sanitizedHtml}
                  .bottom-post
    include common/footer.pug
    +footer()
