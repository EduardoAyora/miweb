doctype html
html(lang='es')
  include ../common/head.pug
  +head("Login")
  body
    header
      include ../common/navbar.pug
      +navbar()
    section.simple-form
      .container
        .row.justify-content-center
          .col-12.col-md-6
            h2 Login
            if errors
              p.text-danger= errors
            if success
              p.text-success= success
            form(method='POST')
              div.form-group
                label(for="username") Nombre de usuario
                input(type="text" id="username" name="username" placeholder="Ingresa tu nombre de usuario").form-control
              div.form-group
                label(for="password") Contraseña
                input(type="password" id="password" name="password" placeholder="Contraseña").form-control
              button(type="submit").btn.btn-primary Submit
    include ../common/footer.pug
    +footer()
