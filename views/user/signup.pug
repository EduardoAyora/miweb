doctype html
html(lang='es')
  include ../common/head.pug
  +head("Signup")
  body
    header
      include ../common/navbar.pug
      +navbar()
    section.simple-form
      .container
        .row.justify-content-center
          .col-12.col-md-6
            h2 SignUp
            if errors
              p.text-danger= errors
            form(method='POST')
              div.form-group
                label(for="username") Nombre de usuario
                input(type="text" id="username" name="username" aria-describedby="emailHelp" placeholder="Ingresa tu username").form-control
              div.form-group
                label(for="password") Contrase√±a
                input(type="password" id="password" name="password" placeholder="Password").form-control
              button(type="submit").btn.btn-primary Submit
    include ../common/footer.pug
    +footer()
