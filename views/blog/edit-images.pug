doctype html
html(lang='es')
  include ../common/head.pug
  +head("Crear Blog")
  body
    header
      include ../common/navbar.pug
      +navbar(true)
    section
      .centered
        .text-center
          h2 Subir imagen
          if errors
            p.text-danger= errors
          if success
            p.text-success= success
          form(method='POST' enctype='multipart/form-data' action=`/blog/${post.id}`)
            .form-group
              label(for="imageFile") Escoge una imagen:
              input(type="file" id="imageFile" name="imageFile" accept="image/png, image/jpeg, image/jpg, image/gif, image/svg" required)
            button(type="submit").btn.btn-primary Confirmar
    include ../common/footer.pug
    +footer()
